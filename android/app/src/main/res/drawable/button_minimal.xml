<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 버튼이 눌렸을 때 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/borderLight" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/borderMedium" />
        </shape>
    </item>

    <!-- 버튼이 비활성화되었을 때 상태 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/btnColor" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/borderLight" />
        </shape>
    </item>

    <!-- 기본 상태 (normal) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cardBackground" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/borderLight" />
        </shape>
    </item>

</selector>