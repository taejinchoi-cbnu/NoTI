<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 메인 버튼 스타일 (초록색 배경, 흰색 텍스트) -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 보조 버튼 스타일 (흰색 배경, 테두리, 초록색 텍스트) -->
    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_secondary_background</item>
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 하단 navbar 스타일 -->
    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationActiveText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
    </style>

    <style name="BottomNavigationInactiveText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
    </style>
</resources>