<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========== 기본 텍스트 스타일 ========== -->
    <style name="TextHeading1">
        <item name="android:fontFamily">@font/pretendardbold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextHeading2">
        <item name="android:fontFamily">@font/pretendardbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextBody1">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextBody2">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextCaption">
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textTertiary</item>
    </style>

    <!-- ========== 버튼 스타일 ========== -->

    <!-- 미니멀 Primary 버튼 (로고 그라데이션) -->
    <style name="ButtonMinimalPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_primary_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendardbold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 미니멀 Secondary 버튼 (보조 액션용) -->
    <style name="ButtonMinimalSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_minimal</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 미니멀 Danger 버튼 (위험한 액션용) -->
    <style name="ButtonMinimalDanger" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_minimal</item>
        <item name="android:textColor">@color/recordingActive</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 작은 텍스트 전용 버튼 (배경/테두리 없음) -->
    <style name="ButtonMinimalSmall" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendardbold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- ========== 카드 스타일 ========== -->
    <style name="CardMinimal">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="android:layout_margin">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="CardMinimalLarge" parent="CardMinimal">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="contentPadding">24dp</item>
    </style>

    <!-- ========== 하단 네비게이션 ========== -->
    <style name="BottomNavigationMinimal" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/cardBackground</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
        <item name="itemIconTint">@color/mainColor</item>
        <item name="itemTextColor">@color/mainColor</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/pretendardbold</item>
        <item name="android:textColor">@color/mainColor</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- ========== 입력 필드 스타일 ========== -->
    <style name="EditTextMinimal" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/button_minimal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendardregular</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- ========== 레거시 스타일 (호환성 유지) ========== -->
    <style name="ButtonPrimary" parent="ButtonMinimalPrimary" />
    <style name="ButtonSecondary" parent="ButtonMinimalSecondary" />

</resources>